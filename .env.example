# Swiss Life Voice Insurance Advisor - Environment Configuration
# ==============================================================
# Copy this file to .env and fill in your credentials

# ===========================================
# Required API Keys
# ===========================================

# ElevenLabs API key for speech-to-text and text-to-speech
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Anthropic API key for Claude LLM
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# ===========================================
# Server Configuration
# ===========================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
DEBUG=false

# ===========================================
# TTS Settings (ElevenLabs)
# ===========================================
ELEVENLABS_VOICE_ID=j08ENmQlEinPmKqg3LUg
TTS_MODEL_ID=eleven_flash_v2_5
TTS_SAMPLE_RATE=16000
TTS_SPEED=1.1

# ===========================================
# STT Settings (ElevenLabs Scribe)
# ===========================================
STT_LANGUAGE=de
STT_SAMPLE_RATE=16000

# ===========================================
# LLM Settings (Anthropic Claude)
# ===========================================
LLM_MODEL=claude-haiku-4-5-20251001
LLM_MAX_TOKENS=500
LLM_TEMPERATURE=0.7

# ===========================================
# RAG Settings (TF-IDF)
# ===========================================
RAG_TOP_K=5
RAG_MAX_FEATURES=5000

# ===========================================
# VAD Settings (Client-side browser)
# ===========================================
VAD_THRESHOLD=0.08
VAD_SILENCE_DURATION_MS=1200
VAD_DEBOUNCE_MS=800
